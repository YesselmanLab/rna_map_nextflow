profiles {
    slurm  {
        process {
            memory = '6GB'
            time = '2h'

            withName: split_fastqs {
                memory = '64GB'
                time = '2h'
            }
            withName:  internal_demultiplex {
                time = '24h'
            }
            withName: join_zip_files {
                cpus = 16
            }
        }
        executor {
            name = 'slurm'
            queueSize = 950    
            submitRateLimit = '10sec'
        }
    }

    slurm_singularity  {
        process {
            executor = 'slurm'
            queueSize = 999
            cpus = 1
            memory = '6GB'

            withName: split_fastqs {
                memory = '64GB'
                time = '2h'
            }
        }
    }

   local {
        process {
            executor = 'local'
            
        }
    }

    local_docker {
        docker.enabled = true
        docker.runOptions = '-v /Users/jyesselman2/projects/nextflow/test_rna_map/inputs:/inputs'
        process {
            executor = 'local'
            container = 'rna-map-nextflow:latest'
            
        }
        cpus = 8
    }
}
